---
import Layout from '../layouts/Layout.astro';
import Navbar from "../components/Navbar.astro";
---

<Layout title="Oscar Esteve - Web full stack develop">
    <Navbar/>
    <main>
        <div class="px-4 py-12 md:px-8 md:py-36 max-w-screen-lg mx-auto relative flex flex-col gap-8">
            <h1 class="text-6xl font-mediumleading-14">Hello !<br> my name is
                <span class="bg-gradient-to-r from-blue-300 to-primary bg-clip-text text-transparent font-bold">
                  Oscar
                </span>
            </h1>
            <h2 class="text-2xl font-medium uppercase text-neutral-300">web full stack developer</h2>
            <p class="text-xl max-w-screen-md leading-18">
                I offer development and maintenance services for web applications, providing scalable, robust, and
                customized solutions to meet the unique needs of each project.
            </p>
            <div class="py-8 text-center md:text-start">
                <a href="https://calendly.com/oscar-esteve/30min"
                   class="bg-primary text-2xl px-12 py-4 inline-block rounded-full hover:opacity-90 transition-opacity duration-200">
                    Get in touch
                </a>
            </div>
        </div>
    </main>
    <div class="absolute start-0 top-0 w-full -z-10">
        <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink"
             viewBox="0 0 800 450" opacity="0.19">
            <defs>
                <filter id="bbblurry-filter" x="-100%" y="-100%" width="400%" height="400%"
                        filterUnits="objectBoundingBox" primitiveUnits="userSpaceOnUse"
                        color-interpolation-filters="sRGB">
                    <feGaussianBlur stdDeviation="69" x="0%" y="0%" width="100%" height="100%" in="SourceGraphic"
                                    edgeMode="none" result="blur"></feGaussianBlur>
                </filter>
            </defs>
            <g filter="url(#bbblurry-filter)">
                <ellipse rx="104.5" ry="128" cx="404.05645751953125" cy="34.09061085094106" fill="#1e1adb54"></ellipse>
            </g>
        </svg>
    </div>

</Layout>
